; editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,eslintrc,html}]
indent_style = space
indent_size = 4

[*.pug]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*{.styl,.less}]
indent_style = space
indent_size = 2
